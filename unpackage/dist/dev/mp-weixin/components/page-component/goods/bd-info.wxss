
.bd-info {
    width: 702rpx;
    background-color: #ffffff;
    border-radius: 15rpx;
    padding: 20rpx;
    margin: 24rpx 24rpx 24rpx 24rpx;
}
.bd-name {
    font-size: 32rpx;
    color: #353535;
    line-height: 42rpx;
    margin-top: 5rpx;
}
.bd-subtitle {
    margin-top: 23rpx;
    font-size: 24rpx;
    line-height: 34rpx;
    color: #999999;
}
.bd-price-share {
    margin-top: 20rpx;
}
.bd-negotiable {
    font-size: 48rpx;
    line-height: 53rpx;
}
.bd-share {
    margin-top: 15rpx;
}
.bd-share .bd-icon {
    width: 40rpx;
    height: 40rpx;
}
.bd-share .bd-text {
    color: #767676;
    font-size: 20rpx;
    line-height: 30rpx;
    margin-top: 5rpx;
}
.bd-margin {
    margin-top: 20rpx;
}
.bd-member-mark {
    margin-left: 12rpx;
}
.bd-price {
    font-size: 56rpx;
    line-height: 1;
