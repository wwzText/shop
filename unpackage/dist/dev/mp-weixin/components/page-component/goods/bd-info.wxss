}
.bd-sales {
    color: #999999;
    font-size: 24rpx;
    margin-top: 22rpx;
}
.bd-member-price {
    font-size: 32rpx;
    margin-right: 20rpx;
    line-height: 1;
}
.bd-origin-price {
    text-decoration: line-through;
    margin-left: 20rpx;
    color: #999999;
    font-size: 28rpx;
}

